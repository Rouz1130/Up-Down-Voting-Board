{{#if editAnswerForm}}
<h4>Update answer</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Your Answer:</label>
        {{input value=content id="content" placeholder=answer.content}}
      </div>

      <div class="form-group">
        <label for="content">Name:</label>
        {{input value=author id="author" placeholder=answer.author}}
      </div>

      <button {{action 'editAnswer' answer}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editAnswerForm'}}>Update Answer</button>
{{/if}}
