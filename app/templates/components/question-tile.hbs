<div class="row">
  <div class="col-sm-1">
    {{question-popularity question}}
  </div>
  <div class="col-sm-1">
    <span class="glyphicon glyphicon-arrow-up" {{action 'upvote' question}}></span>
    <h4>{{question.votes}}</h4>
    <span class="glyphicon glyphicon-arrow-down" {{action 'downvote' question}}></span>
  </div>
  <div class="col-sm-10">
    {{#link-to 'question' question.id}}<h4>{{question.content}}</h4>{{/link-to}}
    <p>{{question.author}}</p>
    <span class="glyphicon glyphicon-heart" {{action 'fave' question}}></span>
  </div>
</div>
